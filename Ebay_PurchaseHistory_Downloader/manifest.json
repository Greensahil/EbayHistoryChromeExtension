{
  "name": "Ebay Purchase History Downloader",
  "description": "Downloads Ebay's purchase history ",
  "version": "1.2",
  "permissions": [
    "activeTab",
    "notifications"
  ],
  "background": {
    "page": "popup.html"  //When you go to chrome extenstion this allows you to see the background page
  },
  "content_scripts": [
    {
    "all_frames": false,
    "matches": ["*://*.ebay.com/*"],
    "exclude_matches": [],
      "js": [
        "/src/jquery.js",
        "/src/sheet-min.js",
        "/src/file-saver-min.js",
        "content.js"
      ]
    }
  ],
  "browser_action": {
      "default_title": "Download Purchase History.",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}
